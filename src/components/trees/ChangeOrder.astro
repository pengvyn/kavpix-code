---

interface SymbolAndName {
    symbol: string,
    name: string,
    precedence: number,
}

interface Props {
    operationInps: SymbolAndName[]
}

import "../../styles/tree-styles.css";

const {operationInps} = Astro.props;
---

<div class="change-order">
    <div class="title">Operator Precedence</div>
    <form id="re-orderer-form">
        <label>Change operator precedence</label>
        <div class="operations">
            {operationInps.map(
                (el) => <div class="operation">
                        <div class="symbol">
                            {el.symbol}
                        </div>
                        <input 
                            type="number"
                            name={`order-${el.name}`}
                            id={`order-${el.name}`}
                            placeholder={`${el.precedence}`}
                        />
                    </div>
            )}
        </div>
        <div class="note">Note: not ~ and parentheses () have the highest precedence by default</div>
    </form>
</div>