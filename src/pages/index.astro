---
import BaseHead from "../components/BaseHead.astro";
import type { CardValues } from "../components/Card.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE } from "../config";
import Cards from "../components/Cards.astro";

const cards: Partial<CardValues>[] = [
	{text: "Expression Calculator", thumbnail: "/images/exp-calc-logo.svg", link: "/number-tree/expression-calculator", bgColor: "bg-slate-300", h: "h-1/2"},
	{text: "Logic Tree", thumbnail: "/images/logic-tree-logo.svg", link: "/logic-tree", bgColor: "bg-slate-300", h: "h-1/2"},
]
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE}/>
	</head>
	<body class=" bg-slate-200">
		<Header back="https://kavpix.com"/>
		<Cards cards={cards}/>
		<footer/>
	</body>
</html>